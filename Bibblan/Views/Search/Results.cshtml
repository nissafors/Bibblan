@{
    ViewBag.Title = "Search";
}

@using (Html.BeginForm("Results", "Search"))
{

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                @Html.TextBox("search-title", null, new { @class = "form-control", @id = "search-title", @style = "margin: 0px", @placeholder = "Titel" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                @Html.TextBox("search-author", null, new { @class = "form-control", @id = "search-author", @placeholder = "Författare" })
            </div>
        </div>
        <div class="col-sm-4">
            <input type="submit" class="btn btn-primary" value="Sök" />
        </div>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.ActionLink("Titel", "Action")</th>
            <th>@Html.ActionLink("Författare", "Action")</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Test Bok @Html.ActionLink("Redigera", "EDIT")</td>
            <td>Herr Test @Html.ActionLink("Redigera", "EDIT")</td>
        </tr>
        <tr>
            <td>En bättre bok</td>
            <td>En sämre författare</td>
        </tr>
    </tbody>
</table>
