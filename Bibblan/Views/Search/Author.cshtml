@model Common.Models.SearchAuthorViewModel
@{
    ViewBag.Title = "Författare";
}

<h1>Sök efter författare</h1>

@using (Html.BeginForm("Author", "Search", FormMethod.Get))
{
    <div class="row">
        <div class="form-group">
            <div class="col-md-6">
                @Html.TextBox("search", "", new
               {
                   @class = "form-control",
                   @id = "input-search",
                   @placeholder = "Författare / Titel"
               })
            </div>
            <div class="col-md-6">
                <input type="submit" class="btn btn-block btn-primary" value="Sök" />
            </div>
        </div>
    </div>
}

@if (ViewBag.result != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Förnamn</th>
                <th>Efternamn</th>
                <th></th>
                <th>Utgivningsår</th>
                <th class="col-md-1"></th>
                <th>Författare</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.result)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td><a href=@("../Book/Details/" + item.ISBN)>@item.Title</a></td>
                    <td>@item.Last</td>
                    <td>@item.PublicationYear</td>
                    <td class="col-md-1"></td>
                    <td>
                        @foreach (var author in item.Authors)
                        {
                            @author.Value <br />
                        }
                    </td>

                    <!--TODO: ADMIN KONTROLL -->
                    <td><a href=@("../edit/book/" + item.ISBN) class="btn btn-xs btn-warning">Redigera bok</a></td>
                </tr>
            }
        </tbody>
    </table>
}