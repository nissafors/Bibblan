@model Common.Models.BorrowerViewModel
@{
   ViewBag.Title = "Mina lån";
}
<h2>Mina lån</h2>

@if(ViewBag.Borrows != null && ViewBag.Borrows.Count > 0)
{ 
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Låndatum</th>
                <th>Återlämnas senast</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrow in ViewBag.Borrows)
            {
                <tr>
                    <td>@borrow.Title</td>
                    <td>@borrow.BorrowDateString</td>
                    <td>@borrow.ToBeReturnedDateString</td>
                    <td>@Html.ActionLink("Förnya", "Renew","Edit", borrow as object, new { @class = "form-control btn btn-block btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Du har inga aktiva lån.</p>
}
<div class="row">
    @Html.ActionLink("Byt lösenord", "ChangePassword", "Edit", null, new { @class = "btn btn-primary" })
</div>