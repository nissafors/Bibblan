@model Common.Models.BookViewModel

@{
	ViewBag.Title = "Details";
}

@if (ViewBag.Book != null)
{
<div class="row">
	<div class="col-xs-6">
		<h1>@ViewBag.Book.Title</h1>
	</div>
    @if (ViewBag.isAdmin)
    {
	<div class="col-xs-3 col-sm-offset-3 text-right">
        <a href=@("../../edit/book/" + ViewBag.Book.ISBN) class="btn btn-xs btn-warning">Redigera bok</a>
	</div>
    }
</div>
<div class="row">
	<div class="col-md-6">
		<dl class="dl-horizontal">
			<dt>Författare:</dt>
            @foreach (var item in ViewBag.Book.Authors)
            {
			<dd>@item.Value</dd>
            }
			<dt>ISBN:</dt>
			<dd>@ViewBag.Book.ISBN</dd>
			<dt>Klassifikation:</dt>
			<dd>@ViewBag.Book.Classification</dd>
			<dt>Publikationsår:</dt>
			<dd>@ViewBag.Book.PublicationYear</dd>
			<dt>Antal sidor:</dt> 
			<dd>@ViewBag.Book.Pages</dd>
		</dl>
	</div>
	<div class="col-md-6">
		<img src="https://s-media-cache-ak0.pinimg.com/564x/46/73/fd/4673fdf9d7821422efbec22771a25c68.jpg" alt="" class="img-rounded img-responsive" />
	</div>
</div>
}
else
{
    <div class="row">
        <div class="col-xs-6">
            <h1>Kunde inte hitta boken</h1>
        </div>
    </div>
}