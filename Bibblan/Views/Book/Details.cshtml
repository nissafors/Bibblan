@model Common.Models.BookViewModel

@{
	ViewBag.Title = "Details";
}

@if (Model != null)
{
<div class="row">
	<div class="col-xs-6">
		<h1>@Model.Title</h1>
	</div>
    @if (ViewBag.isAdmin)
    {
	<div class="col-xs-3 col-sm-offset-3 text-right">
        <a href=@("../../edit/book/" + Model.ISBN) class="btn btn-xs btn-warning">Redigera bok</a>
	</div>
    }
</div>
<div class="row">
	<div class="col-md-6">
		<dl class="dl-horizontal">
			<dt>Författare:</dt>
            @foreach (var item in Model.Authors)
            {
			<dd>@item.Value</dd>
            }
			<dt>ISBN:</dt>
			<dd>@Model.ISBN</dd>
			<dt>Klassifikation:</dt>
			<dd>@Model.Classification</dd>
			<dt>Publikationsår:</dt>
			<dd>@Model.PublicationYear</dd>
			<dt>Antal sidor:</dt> 
			<dd>@Model.Pages</dd>
		</dl>
	</div>
	<div class="col-md-6">
		<img src="https://s-media-cache-ak0.pinimg.com/564x/46/73/fd/4673fdf9d7821422efbec22771a25c68.jpg" alt="" class="img-rounded img-responsive" />
	</div>
</div>
}
else
{
    <div class="row">
        <div class="col-xs-6">
            <h1>Kunde inte hitta boken</h1>
        </div>
    </div>
}