@model Common.Models.AuthorViewModel

@{
    ViewBag.Title = "Author";
}


<div class="page-header">
    <h1>Redigera författare</h1>
</div>

@using (Html.BeginForm("Author", "Edit"))
{
    @Html.HiddenFor(model => model.Aid)
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.BirthYear)
        @Html.TextBoxFor(model => model.BirthYear, new { @class = "form-control" })
    </div>
    <div class="col-md-6">
        <input type="submit" class="btn btn-block btn-primary" value="Bekräfta" />
    </div>
   <div class="col-md-6">
        <a href=@("../Delete/Author/" + Model.Aid) class="form-control btn btn-block btn-danger @(Model.Aid != 0 ? "": "disabled")">Ta bort</a>
    </div>
}