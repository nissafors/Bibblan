@model Common.Models.Author

@{
    ViewBag.Title = "Author";
}

<div class="page-header">
    <h1>Redigera författare</h1>
</div>

@using (Html.BeginForm("Author", "Edit"))
{
    <div class="form-group">
        <label for="FirstName">Förnamn</label>
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label for="LastName">Efternamn</label>
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="BirthYear">Födelseår</label>
        @Html.TextBoxFor(model => model.BirthYear, new { @class = "form-control" })
    </div>
    <div class="text-center">
        <input type="submit" class="btn btn-lg btn-primary" value="Bekräfta" style="width: 40%" />
    </div>
}