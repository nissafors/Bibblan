@{
    ViewBag.Title = "Hem";
}

<div class="jumbotron">
    <h1>Bibblan</h1>
    <p class="lead">Världens snyggaste bibbla.</p>
</div>

@using(Html.BeginForm("Results", "Search"))
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="search-title">Titel</label>
                @Html.TextBox("search-title", null, new { @class = "form-control", @id = "search-title", @style = "margin: 0px"})
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="search-title">Författare</label>
                @Html.TextBox("search-author", null, new { @class = "form-control", @id = "search-author" })
            </div>
        </div>
    </div>
    <div class="text-center">
        <input type="submit" class="btn btn-lg btn-primary" value="Sök" style="width: 40%" />
    </div>
 }
