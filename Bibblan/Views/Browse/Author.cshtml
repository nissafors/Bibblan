@model Common.Models.BrowserAuthorViewModel
    @{
        ViewBag.Title = "Author";
    }
    @using (Html.BeginForm("Title", "Browse"))
    {
        <input type="submit" class="btn btn-default" value="Visa alla titlar" />
    }
    <div class="page-header">
        <h1>Alla författare</h1>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Efternamn</th>
            <th>Förnamn</th>
            <th>Födelseår</th>
            <th class="col-md-1"></th>
        </tr>
        </thead>
        @if (@Model != null)
        {
            foreach (var item in Model.Authors)
            {
                <tr>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.BirthYear</td>
                    @if(ViewBag.isAdmin)
                    {
                         <td><a href=@("../edit/author/" + item.Aid) class="btn btn-xs btn-warning">Redigera Författare</a></td>
                    }
                       
                </tr>
            }
        }
    </table>
