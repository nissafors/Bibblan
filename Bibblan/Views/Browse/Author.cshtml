
@{
    ViewBag.Title = "Author";
}

@using (Html.BeginForm("Title", "Browse"))
{
    <input type="submit" class="btn btn-default" value="Visa alla titlar" />
}
<div class="page-header">
    <h1>Alla författare</h1>
</div>

<table class="table table-striped">
    <tr>
        <th>Efternamn</th>
        <th>Förnamn</th>
        <th>Födelseår</th>
    </tr>
@if (@ViewBag.authors != null)
{
	foreach (var item in @ViewBag.authors)
	{
        <tr>
            <td>@item.Author.LastName</td>
            <td>@item.Author.FirstName</td>
            <td>@item.Author.BirthYear</td>
        </tr>
	}
}
</table>